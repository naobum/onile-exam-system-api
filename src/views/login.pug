extends layout

block content
  .login-container
    h1 Вход в систему
    if error
      .alert.alert-error= error
    form(method="POST")
      .form-group
        label Email:
        input.form-control(type="email" name="email" required)
      .form-group
        label Пароль:
        input.form-control(type="password" name="password" required)
      button.btn(type="submit") Войти